<v-navigation-drawer permanent dark>
    <v-list dense class="pt-0">
      <v-toolbar flat dark class="grey darken-4">
        <v-toolbar-title>client-mgr</v-toolbar-title>
      </v-toolbar>
      <v-list-tile href="<%= customers_path %>">
        <v-list-tile-action>
          <v-icon>face</v-icon>
        </v-list-tile-action>
        <v-list-tile-content>
          <v-list-tile-title class="grey--text">Customers</v-list-tile-title>
        </v-list-tile-content>
        </v-list-tile>
      <v-list-tile href="<%= projects_path %>">
        <v-list-tile-action>
          <v-icon>gamepad</v-icon>
        </v-list-tile-action>
        <v-list-tile-content>
          <v-list-tile-title class="grey--text">Projects</v-list-tile-title>
        </v-list-tile-content>
      </v-list-tile>
    </v-list>
</v-navigation-drawer>
<v-toolbar dark>
  <v-spacer></v-spacer>
  <v-toolbar-items>
    <% if user_signed_in? %>
      <v-btn flat href="<%= destroy_user_session_path %>" data-method="delete" class="grey--text">
        <v-icon left class="grey--text">lock</v-icon>
        Sign Out
      </v-btn>
    <% else %>
      <v-btn flat href="<%= new_user_session_path %>" class="grey--text">
        <v-icon left class="grey--text">lock_open</v-icon>
        Sign In
      </v-btn>
      <v-btn flat href="<%= new_user_registration_path %>" class="grey--text">
        <v-icon left class="grey--text">face</v-icon>
        Sign Up
      </v-btn>
    <% end %>
  </v-toolbar-items>
</v-toolbar>
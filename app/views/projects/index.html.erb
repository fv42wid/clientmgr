<v-card>
  <v-card-title primary-title>
    <h2>Projects</h2>
  </v-card-title>
  <v-card-actions>
    <v-btn primary href="<%= new_project_path %>">Create Project</v-btn>
  </v-card-actions>
</v-card>

<v-layout row mt-2>
  <v-flex xs12 sm6 offset-sm3>
    <v-card>
      <v-toolbar dark>
        <v-toolbar-title>Projects</v-toolbar-title>
      </v-toolbar>
      <v-list two-line>
        <% @projects.each do |project| %>
            <project-index :projectinput="<%= project.to_json %>" :customerinput="<%= project.customer.to_json(only: [:name]) %>"></project-index>
        <% end %>
      </v-list>
    </v-card>
  </v-flex>
</v-layout>


